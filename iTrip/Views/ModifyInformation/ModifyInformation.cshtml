@{
    ViewBag.Title = "同游网-用户信息修改";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="../../Content/modifyinformation/CSS/modifyinformation.css" rel="stylesheet"
    type="text/css" />
<link href="../../Content/loadfile/uploadify.css" rel="stylesheet" type="text/css" />   
<div class="main_body">
    <div class="modify_manage">
        <div class="manage_title">
            <span>管理员信息设置</span></div>
        <div class="manage_body">
            <div class="body_left">
                <table class="body_left_tb">
                    <tr>
                        <td class ="left_td">
                            管理员姓名：
                        </td>
                        <td>
                            <input class="right_td" id="userName" type="text" />
                        </td>
                    </tr>
                    <tr>
                        <td class ="left_td">
                            联系电话：
                        </td>
                        <td>
                            <input class="right_td" id="phone" type="text" />
                        </td>
                    </tr>
                    <tr>
                        <td class ="left_td">
                            密码设置：
                        </td>
                        <td>
                            <input class="right_td" id="password" type="password" />
                        </td>
                    </tr>
                    <tr>
                        <td class ="left_td">
                            确认密码：
                        </td>
                        <td>
                            <input class="right_td" id="confirmPwd" type="password" />
                        </td>
                    </tr>
                    <tr>
                        <td class ="left_td">
                            邮箱：
                        </td>
                        <td>
                            <input class="right_td" id="email" type="text" />
                        </td>
                    </tr>
                </table>
            </div>
            <div class="body_right">
                    <img id="headimg"src="../../Content/modifyinformation/image/头像.jpg" />
                    <input type="file" name="uploadheadimg" id="uploadheadimg"/>
                    <a href="javascript:$('#uploadheadimg').uploadifyUpload()" class="upload">上传</a>
            </div>
        </div>
    </div>
    <div class="modify_scenic">
       <div class ="scenic_title"><span>景区信息设置</span></div>
       <div class="scenic_body">
         <div class ="body_left">
         <ul class ="body_left_ul">
         <li><span class ="left_span">景区名称：</span><input class="right_text"id="scenicZoneName"type="text"/></li>
          <li><span class ="left_span">景区地址：</span><input  class="right_text"id="scenicZoneAdr"type="text"/></li>
           <li><span class ="left_span">营业时间：</span><input  class="right_text"id="openTime"type="text"/></li>
            <li><span class ="left_span">联系方式：</span><input  class="right_text" id="scenicPhone"type="text"/></li>
             <li><span class ="tourist">游客须知：</span><textarea class="tourist_know" id="traverNotice"></textarea></li>
              <li><span class ="scenic">景区介绍：</span><textarea class ="scenic_introduce" id="scenciIntroduction"></textarea></li>
               <li><input class ="submit_bt" id="submit_btn" type ="button" /><span id="succPrompt" class="succPrompt">修改成功</span></li>
         </ul>
         
         </div>
         <div class ="body_right">
           <img id="scenicimg"src="../../Content/modifyinformation/image/上传图片.jpg" />
           <input type="file" name="uploadscenicimg" id="uploadscenicimg"/>
           <a href="javascript:$('#uploadscenicimg').uploadifyUpload()" class="upload">上传</a>
         </div>
        </div>
    </div>
</div>
<script src="../../Content/loadfile/swfobject.js" type="text/javascript"></script>
<script src="../../Content/loadfile/jquery.uploadify.v2.1.4.min.js" type="text/javascript"></script>
<script src="../../Content/modifyinformation/javascript/modifyinformation.js" type="text/javascript"></script>

