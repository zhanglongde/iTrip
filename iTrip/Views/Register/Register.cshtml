@{
    ViewBag.Title = "同游网-注册";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="../../Content/register/CSS/register.css" rel="stylesheet" type="text/css" />
<link href="../../Content/poshytip/tip-yellowsimple/tip-yellowsimple.css" rel="stylesheet"
    type="text/css" />

<div class="register_content">
   <div class="wc-register">
     <h2>欢迎注册同游</h2>
   </div>
   <div class="register_pro_img">
   </div>
   <div class ="register_info">
      <div class="user_info">
        <h2>填写用户信息</h2>
      </div>
      <table>
        <tr class="tr1">
          <td class="align_left" >用户名：</td>
          <td  class="align_right">
            <input  class="username_tx"type="text" title="请输入用户名" id="username"/>
          </td>
        </tr>
        <tr>
           <td class="align_left">密码：</td>
           <td class="align_right">
             <input class="password_tx" type="password" id="password"/>
           </td>
        </tr>
        <tr>
           <td class="align_left">确认密码：</td>
           <td class="align_right">
             <input class="password_tx" type="password" id="confirmpwd"/>
           </td>
        </tr>
        <tr>
           <td  class="align_left">邮箱：</td>
           <td class="align_right">
             <input class="email_tx"type="text" id="email"/>
           </td>
        </tr>
        <tr>
          <td class="align_left">手机：</td>
          <td class="align_right">
           <input class="mobilphone_tx" type="text" id="mobilephone"/>
          </td>
        </tr>
        
   </table>
      <div class="sci_head">
       <h2>填写景区信息</h2>
     </div>
      <div class="sci_info">
        <table>
          <tr>
           <td class="align_left">景区名：</td>
           <td class="align_right">
             <input type="text"id="scenic_name"/ >
           </td>
          </tr>
          <tr>
           <td class="align_left">景区介绍：</td>
           <td class="align_right">
             <textarea rows="3" class="scenic_it"id="scenic_intro"></textarea>
           </td>
          </tr>
          <tr>
            <td class="align_left">景区地址：</td>
           <td class="align_right">
             <input type="text"id="scenic_addr"/>
           </td>
          </tr>
          <tr>
           <td class="align_left">联系方式：</td>
           <td class="align_right">
             <input type="text" id="scenic_phone"/>
           </td>
          </tr>
          <tr>
           <td class="align_left">营业时间：</td>
           <td class="align_right">
             <input type="text" id="open_time"/>
           </td>
          </tr>
          <tr>
           <td class="align_left">游客须知：</td>
           <td class="align_right">
             <textarea rows="3" id="traver_notice"></textarea>
           </td>
          </tr>
          <tr>
           <td class="align_right"></td>
           <td class="align_left">
             <a class="reg_bt" id="regist"></a>
           </td>
        </tr>
        </table>
     </div>
   </div>
   

   <div class="email-active">
     <div>
       <p>我们已经发了封验证邮件到你的邮箱
          <a class="email-adress"></a>
       </p>
       <a class="go-to-email" target="_blank"></a>
     </div>
     <div>
     </div>
   </div>
   <div class="reg-success">
      注册成功，正在努力为你跳转。。。
   </div>
</div>
<script src="../../Scripts/jquery-1.4.4.js" type="text/javascript"></script>
<script src="../../Content/poshytip/jquery.poshytip.js" type="text/javascript"></script>
<script src="../../Content/register/javacript/register.js" type="text/javascript"></script>


